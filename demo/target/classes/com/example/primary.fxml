<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <children>
      <Label text="Primary View" />
      
      <!-- Weight input -->
      <Label fx:id="lblWeight" text="Weight"/>
      <TextField fx:id="tfWeight"/>
      
      <Label fx:id="lblHeight" text="Height"/>
      <TextField fx:id="tfHeight"/>
      
      <Button fx:id="btnCalculate" onAction="#onCalculateClick" text="Calculate"/>

      <Label fx:id="lblResult" />
      
      <Button fx:id="button1" text="EN!" onAction="#onENClick"/>
      <Button fx:id="button2" text="FR!" onAction="#onFRClick"/>
      <Button fx:id="button3" text="UR!" onAction="#onURClick"/>
      <Button fx:id="button4" text="VI!" onAction="#onVIClick"/>
      
      <Label fx:id="lblLocalTime"/>
      
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
